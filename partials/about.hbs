                {{navigation}}
                <ul class="about-social">
                    {{#if @site.facebook}}<li><a class="social-link social-link-fb" href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener">{{> icons/facebook}}</a></li>{{/if}}
                    {{#if @site.twitter}}<li><a class="social-link social-link-tw" href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener">{{> icons/twitter}}</a></li>{{/if}}
                    <li><a class="social-link social-link-gh" href="https://github.com/cozy/cozy-stack" target="_blank" rel="noopener">{{> icons/github}}</a></li>
                    <li><a class="social-link social-link-rss" href="{{@site.url}}/rss/" target="_blank" rel="noopener">{{> icons/rss}}</a></li>
                </ul>
            </div>
            <div class="about-item">
                <h4 class="about-list-title">{{t "Company"}}</h4>
                <ul class="about-list">
                    <li><a href="https://cozy.io/{{@site.locale}}/about/">{{t "About"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/privacy/">{{t "PrivacyAbout"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/partners/">{{t "Partners"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/press/">{{t "Press"}}</a></li>
                    <li><a href="https://www.welcometothejungle.co/companies/cozy-cloud">{{t "JobsAbout"}}</a></li>
                    <li><a href="https://blog.cozy.io/{{@site.locale}}/">{{t "Blog"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/legal/">{{t "Legal"}}</a></li>
                </ul>
            </div>
            <div class="about-item">
                <h4 class="about-list-title">{{t "Product"}}</h4>
                <ul class="about-list">
                    <li><a href="https://cozy.io/{{@site.locale}}/features/">{{t "Applications"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/pricing/">{{t "Pricing"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/support/">{{t "Support"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/download/">{{t "Download"}}</a></li>
                </ul>
            </div>
            <div class="about-item">
                <h4 class="about-list-title">{{t "Developers"}}</h4>
                <ul class="about-list">
                    <li><a href="https://docs.cozy.io/en/tutorials/selfhosting/">{{t "Self-hosting"}}</a></li>
                    <li><a href="https://docs.cozy.io/">{{t "Documentation"}}</a></li>
                    <li><a href="https://github.com/cozy/cozy-stack">{{t "Source Code"}}</a></li>
                    <li><a href="https://cozy.io/{{@site.locale}}/community/">{{t "Contribute"}}</a></li>
                </ul>
            </div>
            <div class="about-item">
                <ul class="about-list about-list--img">
                    <li>
                        <a href="https://itunes.apple.com/{{@site.locale}}/developer/cozy-cloud/id1131616091?mt=8" target="_blank">
                            <figure>
                                <img src="{{asset (concat '/img/app-store-badge-' @site.locale '.svg') }}" alt="{{t "Download Cozy on iOS"}}">
                            </figure>
                        </a>
                    </li>
                    <li>
                        <a href="https://play.google.com/store/apps/developer?id=Cozy+Cloud&amp;hl={{@site.locale}}" target="_blank">
                            <figure>
                                <img src="{{asset (concat '/img/google-play-badge-' @site.locale '.svg') }}" alt="{{t "Download Cozy on Android"}}">
                            </figure>
                        </a>
                    </li>
                    <li>
                        <a href="https://cozy.io/{{@site.locale}}/download/#desktop">
                            <figure>
                                <img src="{{asset (concat '/img/computer-badge-' @site.locale '.svg') }}" alt="{{t "Cozy Drive for Desktop"}}">
                            </figure>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="about-item about-item--full">
                <div class="about-signature">
                    {{t "Made with ❤️ in France not in California."}}
                </div>
            </div>
        </div>
    </div>
</div>

{{#contentFor "scripts"}}
<script>
$(function() {
    $(".site-about-toggle").click(function() {
        $(this).find('.arrow').toggleClass('arrow--top');
        $(".site-about-content").slideToggle();
    });
});
</script>
{{/contentFor}}
