                <label>
                    <input type="email" name="EMAIL" required placeholder="{{#if card}}{{t "Your email"}}{{else}}{{t "Your email (which will be safe)"}}{{/if}}">
                </label>
            </div>
            <div class="subscribe-asimov" aria-hidden="true">
                <input type="text" name="b_e25ec3b4f8c222291f7d77997_a9da8da0de" tabindex="-1" value="">
